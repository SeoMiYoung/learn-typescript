// 타입스크립트 컴파일을 할 때 조금 더 부가적인 옵션을 "tsconfig.json"파일을 통해 줄 수 있음
// 이걸 기준으로 돌아감
// 추후에 계속 추가 가능(https://www.typescriptlang.org/tsconfig) 
//    => 필요한 속성들은 그때그때 문서 찾아보고 추가하면 됨

{
  "compilerOptions": {
    "allowJs": true, // 이 프로젝트 폴더내에서 js파일을 허용하겠다
    "checkJs": true, // @ts-check와 같은
    "noImplicitAny": true, // 모든 것에 대해 기본적으로 any라는 타입이라도 넣어야 한다
  }
}